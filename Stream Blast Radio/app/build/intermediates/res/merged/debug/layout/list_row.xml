<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="hiasdasd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/b_podcast_download"
        android:layout_toLeftOf="@+id/year"
        android:layout_toStartOf="@+id/year" />

    <ImageView
        android:id="@+id/views"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_toRightOf="@+id/tvDuration"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/title"
        android:src="@drawable/ic_play_arrow_black_24dp"/>

    <TextView
        android:id="@+id/tvDuration"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@id/b_podcast_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:20:30"/>

    <TextView
        android:id="@+id/tvViews"
        android:text="200"
        android:layout_width="200dp"
        android:layout_toRightOf="@id/views"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title" />

    <TextView
        android:id="@+id/year"
        android:text="2015"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        android:id="@+id/b_podcast_play"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_file_download_black_24dp"
        android:id="@+id/b_podcast_download"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/b_podcast_play"
        android:layout_toEndOf="@+id/b_podcast_play" />

</RelativeLayout>